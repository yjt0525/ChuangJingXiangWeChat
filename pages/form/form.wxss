/* form.wxss */
.section{
  width:100%;
  height:100%;
}

.section image{
  width: 100%;
  height:100%;
  position: relative;
}

.section .form{
  display: block;
  width:90%;
  height:1000rpx;
  position: absolute;
  z-index:10;
  left:50%;
  margin-left:-45%;
  top:48%;
  margin-top:-500rpx;
  text-align: center;
  color:#856037;
  font-size:32rpx;
}

.section .form .top{
  margin-bottom:40rpx;
}
.section .form .inputform{
  overflow: hidden;
  margin-bottom:20rpx;
  height:70rpx;
  line-height: 53rpx;
  display: flex;
}

.section .form .inputform .message{
  text-align: right;
  flex:2;
  height:70rpx;
  line-height: 70rpx;
  font-size:28rpx;
}

.section .form .inputform .input{
  flex:7;
  margin-left:30rpx;
  height:70rpx;
}

.section .form .inputform .input input,.section .form .inputform .input picker{
  width:99%;
  height:70rpx;
  border:2rpx solid #856037;
  background: rgba(255,255,255,1);
  border-radius:15rpx;
  box-sizing: border-box;
  text-align: left;
  padding-left:20rpx;
  line-height: 66rpx;
}

.getgift{
  background:#aa2218;
  height:80rpx;
  line-height: 80rpx;
  width:300rpx;
  color:#fff;
}

.getcode{
  margin-left:30rpx;
  background:#856037;
  color:#fff;
  line-height:70rpx;
  font-size:30rpx;
  height:70rpx;
  position: relative;
}

.getcode image{
  position: absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
}