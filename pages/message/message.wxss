/* message.wxss */

.section .imgcover, .section .loadingcover {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10;
}

.section .imgcover #BgImg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.section .imgcover .top {
  height: 120rpx;
  background: rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.section .imgcover .top .left {
  float: left;
  width: 40%;
  border-right: 1px solid #fff;
  height: 100%;
  text-align: center;
}

.section .imgcover .top .left image {
  height: 60rpx;
  width: 160rpx;
  margin-top: 10rpx;
}

.section .imgcover .top .right {
  float: right;
  width: 59%;
  height: 100%;
  text-align: center;
}

.section .imgcover .top .right image {
  height: 80rpx;
  width: 350rpx;
}

.section .message {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.section .message view {
  width: 600rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: #f70;
  color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -300rpx;
  margin-top: -40rpx;
}

.section .historygift {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.section .historygift .detail{
  width:660rpx;
  height:800rpx;
  position:absolute;
  left:50%;
  top:50%;
  margin-left:-330rpx;
  margin-top:-400rpx;
  z-index:10;
  color:#fac216;
}

.section .historygift .detail image{
  width:100%;
}

.section .historygift .detail view{
  margin:30rpx 0;
  padding:0 60rpx;
  text-align: center;
}

.section .historygift .detail view .money{
  font-size:90rpx;
}